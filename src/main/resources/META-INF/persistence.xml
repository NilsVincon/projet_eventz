<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="eventz_persistence" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.epf.eventz.model.Adresse</class>
        <class>com.epf.eventz.model.Artiste</class>
        <class>com.epf.eventz.model.AvoirTypeMusique</class>
        <class>com.epf.eventz.model.Evenement</class>
        <class>com.epf.eventz.model.Participe</class>
        <class>com.epf.eventz.model.Performe</class>
        <class>com.epf.eventz.model.PrefererArtiste</class>
        <class>com.epf.eventz.model.PrefererTypeEvenement</class>
        <class>com.epf.eventz.model.PrefererTypeMusique</class>
        <class>com.epf.eventz.model.StatutEvenement</class>
        <class>com.epf.eventz.model.Suivre</class>
        <class>com.epf.eventz.model.TypeEvenement</class>
        <class>com.epf.eventz.model.TypeMusique</class>
        <class>com.epf.eventz.model.Utilisateur</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/projet_eventz"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>